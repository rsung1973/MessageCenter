@using System.IO
@using System.Linq.Expressions

@using WebHome.Controllers
@using WebHome.Helper
@using WebHome.Models
@using WebHome.Models.DataEntity
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.DataPort
@using WebHome.Properties
@using Utility
@using Newtonsoft.Json
@{

    ModelSource<LiveDevice> models;
    ElevatorBoxViewModel _viewModel;

    models = ((SampleController<LiveDevice>)ViewContext.Controller).DataSource;
    _viewModel = (ElevatorBoxViewModel)ViewBag.ViewModel;

}

<div class="border_gray" id="step0">
    <!--表格 開始-->
    <table width="100%" border="0" cellpadding="0" cellspacing="0" class="left_title queryArea">
        <tr>
            <th>
                電梯組數：
            </th>
            <td class="tdleft">
                <input type="text" name="ElevatorCount" value="@(AppSettings.Default.ElevatorCount)" />
            </td>
            <th>
                樓層數：
            </th>
            <td class="tdleft">
                <input type="text" name="Floors" value="@(AppSettings.Default.BuildingFloors)" />
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <button type="button" class="btn btn-primary" onclick="commitStep0();">Step 1</button>
            </td>
        </tr>
    </table>
</div>
@if (AppSettings.Default.ElevatorCount > 0)
{
    Html.RenderPartial("~/Views/DeviceEvents/Module/ElevatorBoxStep1.cshtml");
    if(AppSettings.Default.ElevatorBoxArray?.Length>0)
    {
        Html.RenderPartial("~/Views/DeviceEvents/Module/ElevatorBoxStep2.cshtml");
    }
}
<script>
    function commitStep0() {
        var event = event || window.event;
        var $queryArea = $(event.target).closest('table.queryArea');
        var formData = $queryArea.find('input,select,textarea').serializeObject();
        clearErrors();
        showLoading();
        $.post('@Html.Raw(Url.Action("CommitElevatorStep0", "DeviceEvents"))', formData, function (data) {
            hideLoading();
            if ($.isPlainObject(data)) {
                if (data.result) {
                    alert(data.message);
                } else {
                    alert("郵箱設定失敗!!");
                }
            } else {
                $('#step1').remove();
                $('#step0').after($(data));
            }
        });
    }

    function commitStep1() {
        var event = event || window.event;
        var $queryArea = $(event.target).closest('table.queryArea');
        var formData = $queryArea.find('input,select,textarea').serializeObject();
        clearErrors();
        showLoading();
        $.post('@Html.Raw(Url.Action("CommitElevatorStep1", "DeviceEvents"))', formData, function (data) {
            hideLoading();
            if ($.isPlainObject(data)) {
                if (data.result) {
                    alert(data.message);
                } else {
                    alert("設定失敗!!");
                }
            } else {
                $('#step2').remove();
                $('#step1').after($(data));
            }
        });
    }

    function showStep2() {
        var event = event || window.event;
        showLoading();
        $.post('@Html.Raw(Url.Action("ElevatorBoxStep2", "DeviceEvents"))', {}, function (data) {
            hideLoading();
            if ($.isPlainObject(data)) {
                if (data.result) {
                    alert(data.message);
                } else {
                    alert("設定失敗!!");
                }
            } else {
                $('#step2').remove();
                $('#step1').after($(data));
            }
        });
    }


    function setElevatorStatus() {
        var event = event || window.event;
        var $queryArea = $(event.target).closest('table.queryArea');
        var formData = $queryArea.find('input,select,textarea').serializeObject();

        clearErrors();
        showLoading();
        $.post('@Html.Raw(Url.Action("SetElevatorStatus", "DeviceEvents"))', formData, function (data) {
            hideLoading();
            if ($.isPlainObject(data)) {
                if (data.result) {
                    alert("設定完成!!");
                    showStep2();
                } else {
                    alert(data.message);
                }
            } else {
                $('body')
                    .append($(data));
            }
        });
    }

</script>